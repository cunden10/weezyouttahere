# =====================================
# LOCAL ENVIRONMENT OVERRIDES (EXAMPLE)
# =====================================
# Copy this file to .env.local for personal/machine-specific overrides
# .env.local has the HIGHEST priority in Vite's environment hierarchy
# This file is gitignored and should contain sensitive or personal settings

# Personal Development API Key
# This overrides any key set in .env or .env.development
VITE_DEEPGRAM_API_KEY=your_personal_development_api_key_here

# Personal Development Settings
VITE_DEV_SERVER_PORT=3001
VITE_DEV_SERVER_HOST=localhost
VITE_ENABLE_HTTPS=false

# Personal Feature Flags
VITE_ENABLE_BETA_FEATURES=true
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Personal Backend URLs (if running local backend)
VITE_API_BASE_URL=http://localhost:8080
VITE_ANALYTICS_ENDPOINT=http://localhost:8080/analytics

# Developer-specific Settings
VITE_LOG_LEVEL=debug
VITE_MOCK_API=true
VITE_BYPASS_AUTH=true

# Personal Testing Configuration
VITE_TEST_MODE=true
VITE_SKIP_VALIDATION=false
VITE_FAKE_DATA=false

# Machine-specific Paths (if needed)
VITE_CUSTOM_ASSET_PATH=/Users/yourname/custom-assets
VITE_LOCAL_CERT_PATH=/etc/ssl/certs/localhost.pem

# Personal Analytics/Monitoring (optional)
VITE_DEVELOPER_ID=your_developer_id
VITE_LOCAL_SENTRY_DSN=your_local_sentry_dsn