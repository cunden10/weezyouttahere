{
  "manifest_version": 3,
  "name": "Live Transcription Extension",
  "version": "1.0.0",
  "description": "Real-time audio transcription powered by Deepgram. Stream microphone audio and get instant, accurate transcripts in your browser.",
  "author": "Your Development Team",
  "minimum_chrome_version": "116",

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "wss://api.deepgram.com/*",
    "https://api.deepgram.com/*",
    "https://app.apollo.io/*",
    "https://api.apollo.io/*",
    "https://*.apollo.io/*",
    "https://app.salesloft.com/*",
    "https://api.salesloft.com/*",
    "https://*.salesloft.com/*"
  ],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "action": {
    "default_popup": "src/pages/popup.html",
    "default_title": "Open Live Transcription Dashboard",
    "default_icon": {
      "16": "src/assets/icons/icon-16.png",
      "32": "src/assets/icons/icon-32.png",
      "48": "src/assets/icons/icon-48.png",
      "128": "src/assets/icons/icon-128.png"
    }
  },

  "icons": {
    "16": "src/assets/icons/icon-16.png",
    "32": "src/assets/icons/icon-32.png", 
    "48": "src/assets/icons/icon-48.png",
    "128": "src/assets/icons/icon-128.png"
  },

  "options_page": "src/pages/settings.html",
  "options_ui": {
    "page": "src/pages/settings.html",
    "open_in_tab": true
  },

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "deepgram_rules",
        "enabled": true,
        "path": "config/deepgramRuleset.json"
      }
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://zoom.us/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*"
      ],
      "js": ["src/content/meetingOverlay.js"],
      "css": ["src/styles/content/meetingOverlay.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://app.apollo.io/*",
        "https://*.apollo.io/*"
      ],
      "js": ["src/content/apolloIntegration.js"],
      "css": ["src/styles/content/integrationCommon.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://app.salesloft.com/*",
        "https://*.salesloft.com/*"
      ],
      "js": ["src/content/salesloftIntegration.js"],
      "css": ["src/styles/content/integrationCommon.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/*",
        "src/styles/*",
        "src/assets/*",
        "src/modules/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' wss://api.deepgram.com https://api.deepgram.com https://api.apollo.io https://api.salesloft.com;"
  },

  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Start/stop transcription recording"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open transcription dashboard"
    },
    "save-to-crm": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save transcript to CRM"
    }
  }
}
