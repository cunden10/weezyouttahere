{
  "name": "live-transcription-extension",
  "version": "1.0.0",
  "description": "Real-time audio transcription powered by Deepgram. Stream microphone audio and get instant, accurate transcripts in your browser.",
  "author": "Your Development Team",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "vite build && cp -r src/content build/chrome/src/ && cp -r src/styles build/chrome/src/",
    "build:chrome": "vite build --outDir=build/chrome",
    "build:firefox": "vite build --outDir=build/firefox",
    "build:edge": "vite build --outDir=build/edge",
    "build:legacy": "node tools/build.js",
    "package": "node tools/package.js",
    "validate": "node tools/validate.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.{js,css,html}",
    "dev": "vite",
    "dev:legacy": "node tools/build.js --watch --target=chrome",
    "clean": "rimraf build/*",
    "deploy": "node tools/deploy.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "archiver": "^6.0.1",
    "dotenv": "^16.3.0",
    "eslint": "^8.55.0",
    "fs-extra": "^11.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "vite": "^5.0.0",
    "vite-plugin-static-copy": "^3.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/live-transcription-extension"
  },
  "keywords": [
    "transcription",
    "speech-to-text",
    "deepgram",
    "chrome-extension",
    "real-time",
    "audio",
    "accessibility"
  ],
  "browserslist": [
    "chrome >= 88",
    "firefox >= 78",
    "edge >= 88"
  ]
}
